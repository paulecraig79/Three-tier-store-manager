<Window x:Class="SA_Three_Tiered.Orders.Order_Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SA_Three_Tiered.Orders"
        mc:Ignorable="d"
        Title="Order_Menu" Height="250" Width="600">
    <Grid>
        <Label Content="Orders" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Button x:Name="Finance_Approved" Content="Finance Approved orders" HorizontalAlignment="Center" VerticalAlignment="Center" Width="173" Height="63" Click="Finance_Approved_Click"/>
        <Button x:Name="Store_Performance" Content="Store Performance" HorizontalAlignment="Left" VerticalAlignment="Center" Width="173" Height="63" Margin="417,0,0,0" Click="Store_Performance_Click"/>
        <Button x:Name="Item_Reports" Content="Item Reports" HorizontalAlignment="Left" VerticalAlignment="Center" Width="172" Height="63"  Margin="10,0,0,0" Click="Item_Reports_Click"/>
    </Grid>
</Window>
