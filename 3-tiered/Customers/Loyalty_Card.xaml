<Window x:Class="SA_Three_Tiered.Customer.Loyalty_Card"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SA_Three_Tiered.Customer"
        mc:Ignorable="d"
        Title="Loyalty_Card" Height="150" Width="300">
    <Grid>
        <ComboBox x:Name="Loyal_Combo" HorizontalAlignment="Left" Margin="37,24,0,0" VerticalAlignment="Top" Width="120">
            <ComboBox.ItemsSource>
                <local:Candidates/>
            </ComboBox.ItemsSource>
        </ComboBox>
        <Button x:Name="Set_loyal_button" Content="Ok" HorizontalAlignment="Center" Margin="0,75,0,0" VerticalAlignment="Top" Height="37" Width="228" Click="Set_loyal_button_Click"/>

    </Grid>
</Window>
